<style>
  * {
    font-family: "Montserrat";
  }

  .artistGrid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  p {
    font-size: 1.2rem;
  }

  h3 {
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .hashtags {
    margin-block: 5px;
  }
  .hashtags p {
    font-size: 1.5rem;
    background-color: #e5f793;
    margin-top: 10px;
    margin-right: 10px;
    padding-inline: 5px;
  }

  .spotifyLink {
    font-weight: bold;
    color: #1a4ede;
    text-decoration: none;
    font-size: 2rem;
  }

  .spotifyLink:hover {
    color: black;
  }

  .verticalFlex2 {
    display: flex;
    flex-direction: column;
  }

  @media only screen and (max-width: 600px) {
    .artistGrid {
      display: block;
    }

    h2 {
      margin-top: 1rem;
    }

    h3,
    a {
      text-align: center;
    }

    .horizontalFlex {
      justify-content: center;
    }

    .verticalFlex2 {
      justify-content: center;
    }
  }
</style>
