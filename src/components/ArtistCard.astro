---
const { data } = Astro.props;
---

<div class="artistCard">
  <a href="/#"><img src={data.image} alt="artist image" /></a>
  <div class="horizontalFlex hashtags">
    <p>#{data.hashtag}</p>
    <p>#{data.hashtag2}</p>
    <p>#{data.nationality}</p>
  </div>
  <a href="/#"><h3>{data.name}</h3></a>
  <div class="horizontalFlex info">
    <p>{data.date}&nbsp;//</p>
    <p>&nbsp;{data.time}</p>
  </div>
</div>

<style>
  a {
    text-decoration: none;
    color: #2d2c2a;
  }
  .artistCard {
    width: auto;
    font-family: "Montserrat";
  }
  .hashtags p {
    background-color: #e5f793;
    margin-top: 10px;
    margin-right: 10px;
    padding-inline: 5px;
  }

  h3 {
    font-size: 1.5rem;
    font-family: "Dance";
    letter-spacing: 1px;
  }

  .info {
    font-weight: bold;
    font-size: 1.1rem;
  }
</style>
