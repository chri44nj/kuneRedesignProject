---
import Button from "./Button.astro";
---

<header>
  <nav>
    <div class="logo">
      <a href="index.html">LOGO</a>
      <div>
        <p>KUNE</p>
        <p>FESTIVAL</p>
      </div>
    </div>
    <div class="navItems">
      <a class="navItem" href="/#program">Program 2023</a>
      <a class="navItem" href="food_drinks">Food // Drinks</a>
      <a class="navItem" href="information">Info</a>
      <a class="navItem" href="volunteer">Volunteer</a>
      <a class="navItem" href="aboutus">About Us</a>
    </div>
    <div class="icons">
      <a href="login"><i class="fa-solid fa-user"></i></a>
      <a href=""><i class="fa-solid fa-cart-shopping"></i></a>
      <a href="booking"><Button variant="primary" size="small">BOOKING</Button></a>
      <div class="burgerMenu">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </div>
    </div>
  </nav>
</header>

<style>
  * {
    text-decoration: none;

    font-weight: bold;
  }

  a {
    color: #1a4ede;
    text-transform: uppercase;
  }

  a:hover {
    color: #2d2c2a;
  }

  i {
    font-size: 20px;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-block: 1rem;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100px;
    background-color: #e5f793;
    font-family: "Montserrat";
  }

  .logo {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 1rem;
    width: 250px;
    padding-left: 2rem;
    color: #1a4ede;
  }

  .logo div p {
    font-family: "Dance";
    letter-spacing: 1.5px;
  }

  .navItems {
    display: flex;
    gap: 1rem;
  }

  .icons {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 1rem;
    width: 250px;
    padding-right: 2rem;
  }

  .burgerMenu {
    display: none;
    cursor: pointer;
  }

  .bar {
    display: block;
    width: 25px;
    height: 4px;
    margin: 5px auto;
    -webkit-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
    background-color: #1a4ede;
  }

  @media only screen and (max-width: 1100px) {
    .burgerMenu {
      display: block;
    }

    .burgerMenu.active .bar:nth-child(2) {
      opacity: 0;
    }

    .burgerMenu.active .bar:nth-child(1) {
      transform: translateY(10px) rotate(50deg);
    }
    .burgerMenu.active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-50deg);
    }

    .navItems {
      position: fixed;
      left: -100%;
      top: 100px;
      gap: 0.5rem;
      flex-direction: column;
      background-color: #e5f793;
      width: 100%;
      text-align: center;
      transition: 0.3s;
      padding-bottom: 1rem;
    }

    .navItems.active {
      left: 0;
    }
  }

  @media only screen and (max-width: 600px) {
  }
</style>
